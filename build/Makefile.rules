OS := $(shell uname -s)

include Makefile.$(OS)


all: bbgen bbtest-net bbhostgrep bbhostshow replog

GENOBJS = bbgen.o debug.o loaddata.o reportdata.o larrdgen.o pagegen.o process.o util.o infogen.o alert.o wmlgen.o
NETTESTOBJS = bbtest-net.o util.o debug.o contest.o httptest.o
HOSTGREPOBJS = bbhostgrep.o util.o debug.o
HOSTSHOWOBJS = bbhostshow.o util.o debug.o
REPLOGOBJS = replog.o reportdata.o debug.o util.o

bbgen: $(GENOBJS)
	$(CC) $(CFLAGS) -o bbgen $(GENOBJS)

bbtest-net: $(NETTESTOBJS)
	$(CC) $(CFLAGS) -o bbtest-net $(NETTESTOBJS) $(CURLLIB) $(NETLIBS)

bbhostgrep: $(HOSTGREPOBJS)
	$(CC) $(CFLAGS) -o bbhostgrep $(HOSTGREPOBJS)

bbhostshow: $(HOSTSHOWOBJS)
	$(CC) $(CFLAGS) -o bbhostshow $(HOSTSHOWOBJS)

replog: $(REPLOGOBJS)
	$(CC) $(CFLAGS) -o replog $(REPLOGOBJS)

alert: alert.c debug.c util.c
	$(CC) -g -DSTANDALONE -DDEBUG -Wall -o alert alert.c debug.c util.c

contest: contest.c debug.c util.c
	$(CC) -g -DSTANDALONE -DDEBUG -Wall -o contest contest.c debug.c util.c $(NETLIBS)

reptest: reportdata.c debug.c util.c
	$(CC) -g -DSTANDALONE -DDEBUG -Wall -o reptest reportdata.c debug.c util.c

httptest.o: httptest.c httptest.h
	$(CC) $(CFLAGS) $(CURLINCLUDE) -c -o $@ $<

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f *.o *~ bbgen bbtest-net bbhostgrep bbhostshow replog alert contest reptest
