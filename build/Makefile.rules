all: bbgen bbgmchosts bbnethosts bbtest-web bbtest-net

CC=gcc

# Compile flags for normal build
CFLAGS=-O2 -Wall -Wno-unused

# Compile flags for debugging
# CFLAGS=-g -DDEBUG -Wall

GENOBJS = bbgen.o debug.o loaddata.o larrdgen.o pagegen.o process.o util.o infogen.o alert.o wmlgen.o
WEBTESTOBJS = bbtest-web.o util.o debug.o
NETTESTOBJS = bbtest-net.o util.o debug.o
NETOBJS = bbnethosts.o
GMCOBJS = bbgmchosts.o

bbgen: $(GENOBJS)
	$(CC) $(CFLAGS) -o bbgen $(GENOBJS)

bbtest-web: $(WEBTESTOBJS)
	$(CC) $(CFLAGS) -o bbtest-web $(WEBTESTOBJS)

bbtest-net: $(NETTESTOBJS)
	$(CC) $(CFLAGS) -o bbtest-net $(NETTESTOBJS)

bbnethosts: $(NETOBJS)
	$(CC) $(CFLAGS) -o bbnethosts $(NETOBJS)

bbgmchosts: $(GMCOBJS)
	$(CC) $(CFLAGS) -o bbgmchosts $(GMCOBJS)

alert: alert.c debug.c
	$(CC) -g -DSTANDALONE -DDEBUG -Wall -o alert alert.c debug.c

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f *.o *~ bbgen bbtest-web bbnethosts bbgmchosts alert
